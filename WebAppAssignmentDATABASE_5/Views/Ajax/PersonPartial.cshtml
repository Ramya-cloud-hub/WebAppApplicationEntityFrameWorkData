@model WebAppAssignmentDATABASE_5.Models.Person


<div class="row">

    <div class="col-sm-1">
        @Html.DisplayFor(model => model.Id)
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(model => model.Phone)
    </div>
